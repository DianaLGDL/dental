    <link href="https://file.myfontastic.com/6WZysXsE8Y2X9wThR5VnED/icons.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/estilos.css">
     
    <link rel="icon" type="image/png" href="images/mifavicon.png" />
  </head>
  <body>
    <header class="header">
      <div class="contenedor">
        <h1 class="logo">DentalCris</h1>
        <span class="icon-menu" id="btn-menu"></span>
        <nav class="nav" id="nav">
          <ul class="menu">
            <li class="menu__item"><a href="/" class="menu__link select">Inicio</a></li>
            <li class="menu__item"><a href="infyc/sobren" class="menu__link">Sobre Nosotros</a></li>
            <li class="menu__item"><a href="infyc/contacto" class="menu__link">Contacto</a></li>
            <li class="menu__item"><a href="login/new" class="menu__link">Ingresar</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="banner">
     <center><img src="images/fondo.jpg" alt=""></center>
      <div class="contenedor">
        <h2 class="banner__titulo">Mejora tu salud</h2>
        <p class="banner__txt">Y tu vida mejorara</p>
      </div>
    </div>
    <main class="main">
      <div class="contenedor">
        <section class="info">
          <article class="info__columna">
            <img src="images/promocion.jpg" alt="" class="info__img">
